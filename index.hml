<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>AWS Quiz</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
<style>
  body {
    font-family: 'Inter', sans-serif;
    background-color: #fff;
    color: #fff;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  h1 {
    color: #0d6efd;
    margin-bottom: 40px;
    text-align: center;
  }

  .quiz-container {
    background-color: #ffffff; /* changed to pure white */
    color: #000; /* black text */
    max-width: 700px;
    width: 100%;
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    text-align: center;
    position: relative;
  }

  textarea, input {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border-radius: 10px;
    border: 1px solid #ccc;
  }

  .option {
    display: block;
    width: 100%;
    padding: 12px;
    margin: 10px 0;
    border-radius: 12px;
    border: 1px solid #0d6efd;
    background-color: #f8f9fa; /* light grey options on white container */
    cursor: pointer;
    transition: 0.3s;
    text-align: left;
    font-weight: 500;
  }

 .option:hover {
    background-color: #0d6efd !important;
    color: #fff !important;
    border-color: #0d6efd;
  }
  .selected {
    background-color: #0d6efd !important;
    color: #fff !important;
  }

  #nextBtn, #loadBtn {
    margin-top: 15px;
    width: 50%;
  }

  #scoreBox {
    margin-top: 15px;
    font-weight: 600;
    color: #0d6efd;
  }

  #result {
    font-size: 1.4rem;
    margin-top: 20px;
  }

  /* Fade animations */
  .fade-in {
    animation: fadeIn 0.5s;
  }
  .fade-out {
    animation: fadeOut 0.5s;
  }

  @keyframes fadeIn { from {opacity:0} to {opacity:1} }
  @keyframes fadeOut { from {opacity:1} to {opacity:0} }

  /* Confetti container */
  #confettiCanvas {
    position: fixed;
    top: 0; left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 9999;
  }
</style>
</head>
<body>

<canvas id="confettiCanvas"></canvas>

<div class="quiz-container text-center" id="inputSection">
  <h1>AWS Quiz</h1>
  <input type="file" id="quizFile" class="form-control mb-2">
  <textarea id="quizText" rows="6" class="form-control" placeholder="Or paste your quiz here: Q:, 1., 2., 3., 4., A:"></textarea>
  <button id="loadBtn" class="btn btn-primary" onclick="loadQuiz()">Load Quiz</button>
</div>

<div class="quiz-container text-center" id="quiz" style="display:none;">
  <h2 id="questionText"></h2>
  <div id="options"></div>
  <button id="nextBtn" class="btn btn-primary" onclick="nextQuestion()" disabled>Next</button>
  <div id="scoreBox"></div>
</div>

<div class="quiz-container text-center" id="result" style="display:none;"></div>

<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
<script>
let questions = [];
let current = 0;
let score = 0;
let selectedOption = "";

// Parse quiz
function parseQuiz(text) {
  const lines = text.split('\n').map(l => l.trim()).filter(l => l);
  const parsed = [];
  let q = null;
  for (let line of lines) {
    if (line.startsWith('Q:')) {
      if(q) parsed.push(q);
      q = { question: line.slice(2).trim(), options: [], answer: '' };
    } else if (line.startsWith('A:')) {
      q.answer = line.slice(2).trim();
    } else if (line.match(/^[1-4]\./)) {
      q.options.push(line.slice(2).trim());
    }
  }
  if(q) parsed.push(q);
  return parsed;
}

// Load quiz
function loadQuiz() {
  const fileInput = document.getElementById('quizFile').files[0];
  const textArea = document.getElementById('quizText').value.trim();

  if(fileInput) {
    const reader = new FileReader();
    reader.onload = function(e) {
      questions = parseQuiz(e.target.result);
      startQuiz();
    };
    reader.readAsText(fileInput);
  } else if(textArea) {
    questions = parseQuiz(textArea);
    startQuiz();
  } else {
    alert("Upload a file or paste quiz text!");
  }
}

function startQuiz() {
  if(questions.length === 0) { alert("No questions found!"); return; }
  document.getElementById('inputSection').style.display = 'none';
  document.getElementById('quiz').style.display = 'block';
  current = 0; score = 0;
  showQuestion();
}

function showQuestion() {
  const quizDiv = document.getElementById('quiz');
  quizDiv.classList.remove('fade-in'); quizDiv.classList.add('fade-in');
  const q = questions[current];
  document.getElementById('questionText').innerText = q.question;
  const optionsDiv = document.getElementById('options');
  optionsDiv.innerHTML = '';
  q.options.forEach(opt => {
    const btn = document.createElement('button');
    btn.innerText = opt;
    btn.className = 'option';
    btn.onclick = () => selectOption(btn,opt);
    optionsDiv.appendChild(btn);
  });
  document.getElementById('nextBtn').disabled = true;
  document.getElementById('scoreBox').innerText = `Question ${current+1} of ${questions.length}`;
}

function selectOption(btn,opt) {
  selectedOption = opt;
  Array.from(document.getElementsByClassName('option')).forEach(b => b.classList.remove('selected'));
  btn.classList.add('selected');
  document.getElementById('nextBtn').disabled = false;
}

function nextQuestion() {
  if(selectedOption === questions[current].answer) score++;
  selectedOption = "";
  current++;
  if(current < questions.length) {
    fadeOutIn(showQuestion);
  } else { showResult(); }
}

function fadeOutIn(callback) {
  const quizDiv = document.getElementById('quiz');
  quizDiv.classList.remove('fade-in');
  quizDiv.classList.add('fade-out');
  setTimeout(() => { callback(); quizDiv.classList.remove('fade-out'); quizDiv.classList.add('fade-in'); }, 500);
}

// Result + confetti
function showResult() {
  document.getElementById('quiz').style.display = 'none';
  const resultDiv = document.getElementById('result');
  resultDiv.style.display = 'block';
  const pass = score/questions.length >= 0.7;
  if(pass) { startConfetti(); }
  resultDiv.innerHTML = pass 
    ? `<h2>ðŸŽ‰ You Passed! ðŸŽ‰</h2><p>Score: ${score}/${questions.length} (${Math.round(score/questions.length*100)}%)</p><button class="btn btn-primary mt-3" onclick="retake()">Retake Quiz</button>` 
    : `<h2>Try again Morena ðŸ˜…</h2><p>Score: ${score}/${questions.length} (${Math.round(score/questions.length*100)}%)</p><button class="btn btn-primary mt-3" onclick="retake()">Retake Quiz</button>`;
}

// Confetti
function startConfetti() {
  const duration = 5 * 1000;
  const end = Date.now() + duration;

  (function frame() {
    confetti({
      particleCount: 4,
      angle: 60,
      spread: 55,
      origin: { x: 0 },
      colors: ['#0d6efd','#ffffff','#000']
    });
    confetti({
      particleCount: 4,
      angle: 120,
      spread: 55,
      origin: { x: 1 },
      colors: ['#0d6efd','#ffffff','#000']
    });

    if (Date.now() < end) requestAnimationFrame(frame);
  }());
}

function retake() {
  current=0; score=0; selectedOption="";
  document.getElementById('result').style.display='none';
  document.getElementById('quiz').style.display='block';
  showQuestion();
}
</script>
</body>
</html>
